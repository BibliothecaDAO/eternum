{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@config": ["../../../config/utils/utils"],
      "@config-deployer/config": ["src/types/config-deployer-stub.d.ts"],
      "@config-deployer/*": ["../../../config/deployer/*"],
      "@contracts": ["../../../contracts/utils/utils"],
      "@manifests/*": ["../../../contracts/game/*"],
      "@pm/*": ["src/pm/*"]
    },
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    // "noUnusedLocals": false,
    "strictNullChecks": true,
    // "noUnusedParameters": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "types": ["vite-plugin-svgr/client", "@types/node"]
  },
  "include": [
    "src",
    "../../../config/utils/utils",
    "../../../contracts/utils/utils",
    "../../../packages/core/src/systems/position.ts"
  ],
  "exclude": ["node_modules", "./node_modules", "./node_modules/*", "src/node_modules", "dist", "**/*.spec.ts"],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
