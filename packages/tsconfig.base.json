{
  "compilerOptions": {
    "target": "esnext",
    "module": "ESNext",
    "declaration": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "allowJs": true
  },
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}
